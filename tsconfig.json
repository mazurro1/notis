{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "types": ["node"],
    "jsx": "react",
    "lib": ["dom", "es2015", "es2017"],
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@state/*": ["state/*"],
      "@common/*": ["common/*"],
      "@ui": ["ui"]
    }
  }
}
